<% layout('layouts/boilerplate') %>

<body>
  <h1 class="cardheading">Signup to <span>She</span> Share</h1>
  <div class="box height">
    <div class="img">
      <img src="../images/register.jpg" alt="">
    </div>

    <div class="dataintake">
      <form
        action="/register"
        method="post"
        enctype="multipart/form-data"
        novalidate
        class="row g-3 needs-validation "
      >
        <div class="col-md-10">
          <label for="username" class="form-label">Username</label>
          <input type="text" name="username" required class="form-control" />
        </div>

        <div class="col-md-10">
          <label for="email" class="form-label">Email</label>
          <input type="email" name="email" required class="form-control" />
        </div>

        <div class="col-md-10">
          <label for="pic" class="form-label">Profile Photo</label>
          <input type="file" name="pic" required class="form-control" />
          <p class="formatspecifier">Allowed formats are .png,.jpg,.jpeg</p>
        </div>

        <div class="row g-2">
          <div class="col-md-5">
            <label for="age" class="form-label">Age</label>
            <input type="number" name="age" required class="form-control" />
          </div>

          <div class="col-md-5">
            <label for="currentLocation" class="form-label"> Current Location</label>
            <input type="text" name="currentLocation" required class="form-control" />
          </div>
        </div>

        <div class="col-md-10">
          <label for="story" class="form-label">Describe yourself</label>
          <textarea name="story" id="story" cols="10" rows="3" class="form-control"></textarea>
        </div>

        <div class="col-md-10">
            <label for="hobbies" class="form-label">Hobbies</label>
            <input type="text" name="hobbies" required class="form-control" />
        </div>
        
        <div class="col-md-10">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            name="password"
            required
            class="form-control"
          />
        </div>

        <div class="col-md-10">
          <button class="boxbtn">Create</button>
        </div>
      </form>
    </div>
  </div>
</body>
